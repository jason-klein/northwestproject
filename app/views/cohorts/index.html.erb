<p id="notice"><%= notice %></p>

<h1>Cohorts</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Start date</th>
      <th>Meeting night</th>
      <th>Meeting time</th>
      <th>Organization</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @cohorts.each do |cohort| %>
      <tr>
        <td><%= cohort.start_date %></td>
        <td><%= cohort.meeting_night %></td>
        <td><%= cohort.meeting_time %></td>
        <td><%= cohort.organization.name %></td>
        <td><%= link_to 'Show', cohort %></td>
        <td><%= link_to 'Edit', edit_cohort_path(cohort) %></td>
        <td><%= link_to 'Destroy', cohort, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to "Add individuals to cohort", assign_cohort_path(cohort_id: cohort.id), method: :get %>
</td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

