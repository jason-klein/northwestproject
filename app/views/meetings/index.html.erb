<p id="notice"><%= notice %></p>

<h1>Meetings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Topic</th>
      <th>Meeting date</th>
      <th>Cohort</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td><%= meeting.name %></td>
        <td><%= meeting.topic %></td>
        <td><%= meeting.meeting_date %></td>
        <td><%= meeting.cohort.to_label %></td>
        <td><%= link_to 'Show', meeting %></td>
        <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
        <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% if meeting.attendances.count < 1 %>
          <td><%= link_to 'Record Attendance', new_attendance_path(meeting_id: meeting.id), method: :get %></td>
        <% else %>
          <td><%= link_to 'Show Attendance', attendances_path(meeting_id: meeting.id), method: :get %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

