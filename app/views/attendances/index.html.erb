<p id="notice"><%= notice %></p>

<h1>Attendance</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Cohort</th>
      <th>Meeting Date</th>
      <th>Individual</th>
      <th>Present</th>
    </tr>
  </thead>

  <tbody>
    <% @attendances.each do |attendance| %>
      <tr>
        <td><%= attendance.meeting.cohort.to_label %></td>
        <td><%= attendance.meeting.meeting_date %></td>
        <td><%= attendance.individual.to_label %></td>
        <td><%= attendance.present %></td>
        <td><%= link_to 'Show', attendance %></td>
        <td><%= link_to 'Edit', edit_attendance_path(attendance) %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>