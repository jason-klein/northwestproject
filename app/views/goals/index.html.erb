<p id="notice"><%= notice %></p>

<h1>Goals</h1>

<table>
  <thead>
    <tr>
      <th>Individual</th>
      <th>Goal</th>
      <th>Goal start</th>
      <th>Goal finish</th>
      <th>Completion percentage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
      <tr>
        <td><%= goal.individual %></td>
        <td><%= goal.goal %></td>
        <td><%= goal.goal_start %></td>
        <td><%= goal.goal_finish %></td>
        <td><%= goal.completion_percentage %></td>
        <td><%= link_to 'Show', goal %></td>
        <td><%= link_to 'Edit', edit_goal_path(goal) %></td>
        <td><%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

